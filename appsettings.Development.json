{
  "Environment": "development",
  "ServiceName": "payment-service",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Service} [{CorrelationId}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Service": "payment-service",
      "Environment": "development"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "PaymentService": "Trace"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=PaymentServiceDb_Dev;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true;"
  },
  "PaymentProviders": {
    "Stripe": {
      "IsEnabled": true,
      "PublishableKey": "pk_test_51234567890abcdef...",
      "SecretKey": "sk_test_51234567890abcdef...",
      "WebhookSecret": "whsec_1234567890abcdef..."
    },
    "PayPal": {
      "IsEnabled": true,
      "ClientId": "AYourPayPalClientIdHere",
      "ClientSecret": "EYourPayPalClientSecretHere",
      "IsSandbox": true,
      "ReturnUrl": "https://localhost:7001/payment/success",
      "CancelUrl": "https://localhost:7001/payment/cancelled"
    },
    "Square": {
      "IsEnabled": false,
      "ApplicationId": "sq0idp-your-app-id",
      "AccessToken": "EAAAEYourSquareAccessTokenHere",
      "IsSandbox": true,
      "LocationId": "your-location-id"
    }
  }
}
